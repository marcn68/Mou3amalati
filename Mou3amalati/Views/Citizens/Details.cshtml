@model Mou3amalati.Models.Citizen

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Citizen: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            First Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-4">
            Last Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-4">
            Father First Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.FatherFirstName)
        </dd>
        <dt class="col-sm-4">
            Mother First Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MotherFirstName)
        </dd>
        <dt class="col-sm-4">
            Mother Maiden Name
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.MotherMaidenName)
        </dd>
        <dt class="col-sm-4">
            Date Of Birth
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-4">
            Place Of Birth
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BirthPlace)
        </dd>
        <dt class="col-sm-4">
            Religion
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Religion.Description)
        </dd>
        <dt class="col-sm-4">
            Civil Status
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CivilStatus.Description)
        </dd>
        <dt class="col-sm-4">
            Blood Type
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BloodType.Type)
        </dd>
        <dt class="col-sm-4">
            Gender
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Gender.Description)
        </dd>
        <dt class="col-sm-4">
            Life Status
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LifeStatus.Status)
        </dd>
        <dt class="col-sm-4">
            Civil Register Number
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CivilRegisterNumber)
        </dd>
        <dt class="col-sm-4">
            Residence Address
        </dt>
        <dd class="col-sm-8">@Model.ResidenceAddress.District, @Model.ResidenceAddress.State, @Model.ResidenceAddress.City, @Model.ResidenceAddress.StreetName, @Model.ResidenceAddress.BuildingName, @Model.ResidenceAddress.Details</dd>
        <dt class="col-sm-4">
            Origins Address:
        </dt>
        <dd class="col-sm-8">@Model.OriginAddress.District, @Model.OriginAddress.State, @Model.OriginAddress.City, @Model.OriginAddress.StreetName, @Model.OriginAddress.BuildingName, @Model.OriginAddress.Details</dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
