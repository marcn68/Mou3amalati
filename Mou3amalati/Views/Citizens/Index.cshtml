                @Html.DisplayFor(modelItem => item.ResidenceAddress.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidenceAddress.BuildingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidenceAddress.Details)
