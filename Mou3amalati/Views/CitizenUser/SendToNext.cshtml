@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Mou3amalati.ViewModels.DocumentsAssignedViewModel
@{
    ViewData["Title"] = "Send To Next";
}

<head>
    <link rel="stylesheet" href="~/css/documents.css" />
</head>

<div class="container" align="center">
    <h1>Choose a person to assign this document to</h1>
    <br />
    <p>This document will be assigned to a @(Model.RoleName) from your District</p>
    <p>Choose one of them:</p>
</div>

<div class="container" align="center">
    <div>
        <form asp-action="SendToNext">
            <input type="hidden" asp-for="@Model.DocRequestId" />
            <input type="hidden" asp-for="@Model.isLast" />
            <div class="form-group">
                <label asp-for="@Model.SelectedRoleCitizenId" class="control-label">@Model.RoleName</label>
                <select asp-for="@Model.SelectedRoleCitizenId" class="form-control" asp-items="@Model.roleList"></select>
                <span asp-validation-for="@Model.SelectedRoleCitizenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
