@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Mou3amalati.ViewModels.DocumentsAssignedViewModel 
@{
    ViewData["Title"] = "Assigned";
}

<head>
    <link rel="stylesheet" href="~/css/documents.css" />
</head>

<div class="container" align="center">
    <h1>Choose a person to assign this document to</h1>
    <br />
    <p>This document will be assigned to a Mokhtar from your District</p>
    <p>Choose one of them:</p>
</div>

<div class="container" align="center">
    <div>
        <form asp-action="RequestFinished" asp-controller="Documents">
            <div class="form-group">
                <label for="assigned" class="control-label">Assign it to:</label>
                <select for="assigned" asp-items="Model.roleList" name="roleList">
                    <option value="0">--Select Mokhtar--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
    </form>
</div>
</div>